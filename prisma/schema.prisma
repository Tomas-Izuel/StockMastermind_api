// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Article {
  id Int @id @default(autoincrement())
  name String
  price String
  articleInventories ArticleInventory[] @relation("ArticleToArticleInventory")
  articleOrders ArticleOrder[] @relation("ArticleToArticleOrder")
}

model ArticleInventory {
  id Int @id @default(autoincrement())
  articleId Int
  quantity Int
  inventoryId Int
  article Article @relation(fields: [articleId], references: [id], name: "ArticleToArticleInventory")
  inventory Inventory @relation(fields: [inventoryId], references: [id])
}

model Inventory {
  id Int @id @default(autoincrement())
  articleInventories ArticleInventory[]
}

model ArticleOrder {
  id Int @id @default(autoincrement())
  articleId Int
  quantity Int
  price String
  puchaseOrderId Int
  article Article @relation(fields: [articleId], references: [id], name: "ArticleToArticleOrder")
  puchaseOrder PuchaseOrder @relation(fields: [puchaseOrderId], references: [id])
}

model PuchaseOrder {
  id Int @id @default(autoincrement())
  total String
  articleOrders ArticleOrder[]
}
